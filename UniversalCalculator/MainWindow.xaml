<Page
    x:Class="Calculator.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Calculator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

	<!-- Abbacus image -->
	<Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
		<StackPanel Margin="20">
			<Image Source="Images/abacus.PNG"
               Width="150"
               Height="150"
               HorizontalAlignment="Right"
               VerticalAlignment="Top"
               />
		
			<StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">

				<!-- Title -->
				<StackPanel HorizontalAlignment="Center" Margin="20">
					<TextBlock Text="Universal Calculator" 
							   FontSize="50"
							   FontWeight="Bold"
							   HorizontalAlignment="Center"/>
				</StackPanel>

				<!-- Buttons -->
				<Border BorderBrush="Black" BorderThickness="2" Padding="10">

					<StackPanel HorizontalAlignment="Center">
						<StackPanel Margin="20">
							<Button Content="Math Calculator"
								FontSize="25"
								Width="250"
								Height="50"/>
						</StackPanel>

						<StackPanel Margin="20">
							<Button Content="Mortgage Calculator" Click="OpenMortgageCalculator"
								FontSize="25"
								Width="250"
								Height="50"/>
						</StackPanel>

						<StackPanel Margin="20">
							<Button Content="Currency Calculator"
								Width="250"
								FontSize="25"
								Height="50"/>
						</StackPanel>

						<StackPanel Margin="20">
							<Button Content="Exit"
								Width="250"
								FontSize="25"
								Height="50"/>
						</StackPanel>
					</StackPanel >
				</Border>
			</StackPanel>
		</StackPanel>
	</Grid>
</Page>